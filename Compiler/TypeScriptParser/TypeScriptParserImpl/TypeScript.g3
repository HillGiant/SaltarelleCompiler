    OR		        = '|' ;
    XOR		        = '^' ;
    NOT		        = '!' ;
    INV		        = '~' ;
    LAND		= '&&' ;
    LOR		        = '||' ;
    QUE		        = '?' ;
    COLON		= ':' ;
    ASSIGN		= '=' ;
    ADDASS		= '+=' ;
    SUBASS		= '-=' ;
    MULASS		= '*=' ;
    MODASS		= '%=' ;
    SHLASS		= '<<=' ;
    SHRASS		= '>>=' ;
    SHUASS		= '>>>=' ;
    ANDASS		= '&=' ;
    ORASS		= '|=' ;
    XORASS		= '^=' ;
    DIV		        = '/' ;
    DIVASS		= '/=' ;
    ELLIPSIS            = '...';
    ARROW               = '=>';

    ARRAY_TYPE;
    FUNCTION_TYPE;
    PARAM;
    PARAM_ARRAY;
    PARAM_OPT;
    PARAMS;
