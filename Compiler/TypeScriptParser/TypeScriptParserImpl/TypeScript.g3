grammar TypeScript;

options
{
	output = AST;
	language = CSharp3;
	k=3;
}

tokens {

// Reserved words
    NULL		= 'null' ;
    TRUE		= 'true' ;
    FALSE		= 'false' ;

// Keywords
    BREAK		= 'break' ;
    CASE		= 'case' ;
    CATCH 		= 'catch' ;
    CONTINUE 	        = 'continue' ;
    DEFAULT		= 'default' ;
    DELETE		= 'delete' ;
    DO 		        = 'do' ;
    ELSE 		= 'else' ;
    FINALLY 	        = 'finally' ;
    FOR 		= 'for' ;
    FUNCTION 	        = 'function' ;
    IF 		        = 'if' ;
    IN 		        = 'in' ;
    INSTANCEOF 	        = 'instanceof' ;
    NEW 		= 'new' ;
    RETURN 		= 'return' ;
    SWITCH 		= 'switch' ;
    THIS 		= 'this' ;
    THROW 		= 'throw' ;
    TRY 		= 'try' ;
    TYPE 		= 'type' ;
    TYPEOF 		= 'typeof' ;
    VAR 		= 'var' ;
    VOID 		= 'void' ;
    WHILE 		= 'while' ;
    WITH 		= 'with' ;

// Typescript reserved words
    ABSTRACT	        = 'abstract' ;
    CLASS 		= 'class' ;
    DECLARE   	        = 'declare';
    INTERFACE 	        = 'interface' ;
    EXTENDS   	        = 'extends';
    MODULE    	        = 'module';
    EXPORT    	        = 'export';
    IMPORT    	        = 'import';
    PRIVATE 	        = 'private' ;
    PROTECTED 	        = 'protected' ;
    PUBLIC		= 'public' ;
    CONSTRUCTOR 	= 'constructor' ;
    GET 		= 'get' ;
    SET 		= 'set' ;
    REQUIRE		= 'require';

// Typescript predefined types
    ANY		        = 'any' ;
    NUMBER		= 'number' ;
    BOOLEAN		= 'boolean' ;
    STRING		= 'string' ;
    VOID		= 'void' ;
        
// Future reserved words
    BOOLEAN 	        = 'boolean' ;
    BYTE 		= 'byte' ;
    CHAR 		= 'char' ;
    CONST 		= 'const' ;
    DOUBLE		= 'double' ;
    ENUM 		= 'enum' ;
    FINAL 		= 'final' ;
    FLOAT 		= 'float' ;
    GOTO 		= 'goto' ;
    IMPLEMENTS 	        = 'implements' ;
    INT 		= 'int' ;
