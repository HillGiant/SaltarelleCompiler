    SUPER 		= 'super' ;
    SYNCHRONIZED 	= 'synchronized' ;
    THROWS 		= 'throws' ;
    TRANSIENT 	        = 'transient' ;
    VOLATILE 	        = 'volatile' ;

// Made-up keywords
    YIELD		= 'yield';
    AWAIT               = 'await';

// Punctuators
    LBRACE		= '{' ;
    RBRACE		= '}' ;
    LPAREN		= '(' ;
    RPAREN		= ')' ;
    LBRACK		= '[' ;
    RBRACK		= ']' ;
    DOT		        = '.' ;
    SEMIC		= ';' ;
    COMMA		= ',' ;
    LT	                = '<' ;
    GT		        = '>' ;
    LTE		        = '<=' ;
    GTE		        = '>=' ;
    EQ		        = '==' ;
